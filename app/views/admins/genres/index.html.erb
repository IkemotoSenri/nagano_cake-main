<h4>ジャンル⼀覧・追加</h4>

<%= form_with model:@genre, url:"/admins/genres/", local:true do |f| %>
<h5>ジャンル名</h5>
<%= f.text_field :name %>
 <%= f.submit '新規登録', class: "btn btn-primary" %>
 
<% end %>
 <% @genres.each do |genre| %>

 <%= genre.name %>
 <%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success btn-sm mr-5 " %>
<% end %>